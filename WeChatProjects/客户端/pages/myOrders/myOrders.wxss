/* pages/myOrders/myOrders.wxss */
.refreshButton{
  z-index: 6;
  position: fixed;
  top: 0rpx;
  margin-bottom: 5rpx;
  border-radius: 10rpx;
  background-color: #439677;
  color: aliceblue;
  width: 100%;
  height:100rpx;
}
.orderList {
  margin-top: 110rpx;
  background: #fff;
  bottom: 110rpx;
  border-bottom: 20rpx solid #f5f5f5;
}
 
.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #BEBEBE;
}
 
.orderListTitle .userName {
  padding-right: 50rpx;
  margin-left:10px;
}
 
.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #2f7b27;
  font-size: 34rpx;
}
.orderId{
  font-size: 34rpx;
  color: grey;
  margin-left: 20rpx;
}
.orderListDetails {
  display: flex;
  height: 200rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
 
.orderListDetails .orderStateImg {
  flex: 1;
  height:180rpx;
  width:120px;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.orderListDetails{
  width: 1000rpx;
  height: 320rpx;
}
 .orderStateImg image {
  margin-top: 50rpx;
  width: 180rpx;
  height: 180rpx;
}
 
.orderListDetails .orderInfo {
  flex: 4;
  margin: 40rpx 10px 20px 30rpx;
  font-size:15px;
 
}
 
.orderListDetails .orderInfo .orderTitle {
  font-size:15px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 20rpx;
  margin-bottom:3px;
}
 
.productPayState {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
 
.productPayState>view {
  float: right;
  margin-right: 30rpx;

}